{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "types": ["jest", "node"],
    "moduleResolution": "node",
  },
  "include": ["./src/**/*.ts", "src/routes/index.tsx", "src/styles.js"],
  "exclude": ["./node_modules"],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "jest"
    ]
  }
}
